{
  "name": "engineer-blog",
  "version": "1.0.0",
  "description": "Moses Omondi's Engineering Blog - A modern, performant blog platform built with enterprise-grade standards",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "build": "npm run lint && npm run test && npm run build:css && npm run build:js && npm run build:blog",
    "build:css": "postcss css/styles.css -o dist/css/styles.min.css",
    "build:js": "esbuild src/js/main.js --bundle --minify --outfile=dist/js/main.min.js --target=es2020",
    "build:blog": "node src/generate-blog.js --all",
    "watch:css": "postcss css/styles.css -o dist/css/styles.min.css --watch",
    "serve": "live-server --port=3000 --open=/index.html",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --fix && prettier --write src/",
    "lint:check": "eslint src/ && prettier --check src/",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "snyk test",
    "performance:audit": "lighthouse-ci autorun",
    "performance:bundle": "webpack-bundle-analyzer dist/stats.json",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "validate": "npm run lint:check && npm run test && npm run security:audit",
    "clean": "rimraf dist coverage .nyc_output",
    "docker:build": "docker build -t engineer-blog .",
    "docker:run": "docker run -p 80:80 engineer-blog"
  },
  "keywords": [
    "blog",
    "engineering",
    "devops",
    "software-development",
    "portfolio"
  ],
  "author": {
    "name": "Moses Omondi",
    "email": "mosesomondi.dev@gmail.com",
    "url": "https://mosesomondi.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moses-Omondi/engineer-blog.git"
  },
  "bugs": {
    "url": "https://github.com/Moses-Omondi/engineer-blog/issues"
  },
  "homepage": "https://mosesomondi.dev",
  "dependencies": {
    "marked": "^12.0.0",
    "highlight.js": "^11.9.0",
    "gray-matter": "^4.0.3",
    "date-fns": "^3.6.0",
    "sanitize-html": "^2.12.1"
  },
  "overrides": {
    "braces": ">=3.0.3",
    "cookie": ">=0.7.0",
    "ws": ">=8.17.1",
    "tar-fs": ">=3.0.0",
    "tmp": ">=0.2.4",
    "esbuild": ">=0.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@playwright/test": "^1.41.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "esbuild": "^0.20.1",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.5",
    "@lhci/cli": "^0.12.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "snyk": "^1.1276.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/*.test.{js}",
      "!src/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 40,
        "statements": 40
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
